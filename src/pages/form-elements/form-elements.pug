extends ../ui-kit/ui-kit.pug

block title
  include dependencies.pug

  ='Form Elements'

block content
  .ui-kit__grid-item-1
    +sample-form('Text field', 'Default')
      +input()(type='email', placeholder='Email')
    +sample-form('Text field', 'Hover / Focus')
      +input()(class='input_active', value='This is pretty awesome')
    +sample-form('Dropdown', 'Default')
      +dropdown('', 'guests')
    +sample-form('Masked text field', 'Default')
      +input('date')
    +sample-form
      +date-picker('double', 'Date dropdown', 'Date dropdown')
    +sample-form
      +date-picker('single', 'Filter date dropdown')
    +sample-form('Subscription text field')
      +subscription
  .ui-kit__grid-item-2
    +sample-form
      +list('Checkbox buttons', [
        ['smoke', 'Можно курить'],
        {name: 'pets', label: 'Можно с питомцами', checked: ''},
        {name: 'guests', label: 'Можно пригласить гостей (до 10 человек)', checked: ''}
      ], 'checkbox')
    +sample-form
      +list('Radio buttons', [
        {name: 'sex', label: 'Мужчина', checked: ''},
        ['sex', 'Женщина']
      ], 'radio')
    +sample-form
      +list('Toggle', [
        {name: 'offer', label: 'Получать спецпредложения', checked: ''},
        ['offer', 'Получать спецпредложения']
      ], 'toggle')
    +sample-form('Like button')
      .likes
        +like(false, 2)
        +like(true, 12)
    +sample-form('Rate button')
      .rates
        +rating(4)
        +rating(5)
  .ui-kit__grid-item-3
    form
      +slider('Range slider')
    +sample-form('Buttons')
      .buttons
        +button({text: 'Click me'})
        +button({text: 'Click me'})(class='button_focused')
        +button({text: 'Click me'}, 'border')
        +button({text: 'Click me'}, 'border')(class='button_focused')
      .buttons
        +button({text: 'Click me', textColor: 'primary-color'}, 'text', 'min')
        +button({text: 'Click me', textColor: 'dark-50'}, 'text', 'min')
      +button({text: 'Перейти к оплате', icon: 'arrow_forward'}, 'fill', 'big')
    +sample-form('Pagination')
      -
        const pages = [
          {value: 1, href: '#'},
          {value: 2, href: '#'},
          {value: 3, href: '#'},
          { value: '...', placeholder: true },
          {value: 15, href: '#'},
          { next: true }
          ];
      +pagination(pages, '1 – 12 из 100+ вариантов аренды')
  .ui-kit__grid-item-4
    +sample-form('Dropdown', 'Default')
      +dropdown('', 'conveniences', [], false)
    +sample-form('Dropdown', 'Expanded')
      +dropdown('', 'conveniences', [], false)
  .ui-kit__grid-item-5
    +sample-form
      +dropdown('Dropdown', 'guests')
  .ui-kit__grid-item-6
    +sample-form
      +dropdown('Dropdown', 'guests')
  .ui-kit__grid-item-7
    +sample-form
      +exp-list('Expandable checkbox list', [
        {name: 'breakfast', label: 'Завтрак'},
        {name: 'table', label: 'Письменный стол'},
        {name: 'feeding-chair', label: 'Стул для кормления'},
        {name: 'crib', label: 'Кроватка'},
        {name: 'tv-1', label: 'Телевизор'},
        {name: 'shampoo-1', label: 'Шампунь'},
        {name: 'tv-2', label: 'Телевизор'},
        {name: 'shampoo-2', label: 'Шампунь'}
      ])
    +sample-form
      +exp-list('Expandable checkbox list', [
        {name: 'breakfast', label: 'Завтрак'},
        {name: 'table', label: 'Письменный стол', checked: ''},
        {name: 'feeding-chair', label: 'Стул для кормления', checked: ''},
        {name: 'crib', label: 'Кроватка', checked: ''},
        {name: 'tv-1', label: 'Телевизор'},
        {name: 'shampoo-1', label: 'Шампунь'},
        {name: 'tv-2', label: 'Телевизор'},
        {name: 'shampoo-2', label: 'Шампунь'}
      ])
  .ui-kit__grid-item-8
    +sample-form
      +list('Rich checkbox buttons', [
        ['wide', 'Широкий коридор', 'Ширина коридоров в номере не менее 91 см.'],
        ['assistant', 'Помощник для инвалидов', 'На 1 этаже вас встретит специалист и проводит до номера.']
      ], 'rich')
  .ui-kit__grid-item-9
    +sample-form
      +list('Bullet list', [
        'Нельзя с питомцами',
        'Без вечеринок и мероприятий',
        'Время прибытия — после 13:00, а выезд до 12:00'
      ])
  .ui-kit__grid-item-10
    +list('', [
      ['insert_emoticon', 'Комфорт', 'Шумопоглощающие стены'],
      ['location_city', 'Удобство', 'Окно в каждой из спален']
    ], 'icon')
  .ui-kit__grid-item-11
    +comment(
      'Мурад Сарафанов',
      '5 дней назад',
      'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
      [true, 12])