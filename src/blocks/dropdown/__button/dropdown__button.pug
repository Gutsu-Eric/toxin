include dependencies.pug
mixin dropdown__button(value, type)
  - const buttonClass = type ? `dropdown__button dropdown__button_type_${type}` : 'dropdown__button';
  if type === 'clear' || type === 'apply'
    +button({text: value}, 'text', 'min')&attributes(attributes)
  else
    button.text(type='button', class=buttonClass)&attributes(attributes)= value