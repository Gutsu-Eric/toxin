include dependencies.pug
mixin dropdown(type='', items, control=true)
  //- type should be one of:
  //-   guests
  //-   conveniences
  -
    const typeItems = {
      'guests': [
        'Взрослые',
        'Дети',
        'Младенцы'
      ],
      'conveniences': [
        'Спальни',
        'Кровати',
        'Ванные комнаты'
      ]
    };
    // Use given array of items or defaults
    const listItems = (items && items.length) ? items :
                      typeItems[type] ? typeItems[type] : [];
    const typeClass = type ? `dropdown_type_${type}` : '';

  .dropdown(class=typeClass)&attributes(attributes)
    +dropdown__total
    .dropdown__container
      +dropdown__list(listItems)
      if control
        +control(
          [
            { text: 'Очистить', color: 'dark-50', action: 'clear' },
            { text: 'Применить', color: 'primary-color', action: 'apply' }
          ],
          {
            selector: '.dropdown',
            name: 'dropdown'
          }
        )(class='dropdown__control')